<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/content_view"
        android:layout_below="@+id/toolbar"
        android:visibility="gone"
        />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/content_view"
        android:layout_below="@+id/toolbar"></FrameLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        tl:tl_iconHeight="25dp"
        tl:tl_iconWidth="25dp"
        tl:tl_textSelectColor="@color/primary_text"
        tl:tl_textUnselectColor="@color/unselect_color"
        tl:tl_underline_color="#DDDDDD"
        tl:tl_underline_height="1dp" />
</RelativeLayout>
